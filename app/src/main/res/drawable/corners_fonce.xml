<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ombre (un peu plus grande et semi-transparente) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000"/>  <!-- Noir transparent -->
            <corners android:radius="11.5dp"/>  <!-- Un peu plus grand que le fond principal -->
        </shape>
    </item>

    <!-- Fond vert principal -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/vertfonce"/>
            <stroke android:width="1dp" android:color="@color/vertfonce"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
