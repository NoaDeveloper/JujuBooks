<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verteau"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/namePage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="STATISTIQUES"
            android:textColor="@color/white"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/logo_spashscreen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/baseline_book_24"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_vert"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:padding="7dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/vertfonce"
                    android:text="Nombre de livre présent dans votre bibliothèque:"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nblivrebiblio"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/white"
                    android:text="25"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_bold">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_vert"
                android:gravity="center"
                android:padding="7dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/vertfonce"
                    android:text="Nombre de livre présent dans votre liste:"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nblivreliste"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/white"
                    android:text="25"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_bold">
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/corners_fonce"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Moyenne des notes de vos livres:"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/moyenneNote"
                    android:text="15"
                    android:gravity="center"
                    android:textColor="@color/vert"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="35sp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/corners_fonce"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Prix le plus élévés d'un livre listés:"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prixHaut"
                    android:text="15.99€"
                    android:gravity="center"
                    android:textColor="@color/vert"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="30sp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/corners_fonce"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="Format que vous possèdez le plus:"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/formatPref"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Broché"
                    android:textColor="@color/vert"
                    android:textSize="20sp"></TextView>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vos livres préférés:"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:textSize="20sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/layoutLivres"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/corners_vert">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/layout_home"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_home_filled_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="Accueil"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/layout_biblio"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_collections_bookmark_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="Bibliothèque"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_liste"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_grade_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="Ma Liste"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_stats"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/baseline_auto_graph_vert" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="Stats"
                android:textColor="@color/vertfonce"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold">

            </TextView>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>